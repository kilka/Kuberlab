# OCR AKS Demo Environment Configuration
# Copy this to .env and update with your values

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-subscription-id
AZURE_TENANT_ID=your-tenant-id
RESOURCE_GROUP=dev-ocr-rg-001
LOCATION=eastus2

# Budget Alerts
BUDGET_ALERT_EMAIL=your-email@example.com
MONTHLY_BUDGET=50
DAILY_BUDGET_LIMIT=5

# GitHub Configuration (for OIDC)
GITHUB_REPOSITORY=your-org/your-repo

# Terraform Configuration
TF_VAR_budget_alert_email=${BUDGET_ALERT_EMAIL}
TF_VAR_github_repository=${GITHUB_REPOSITORY}

# Development Settings
ENVIRONMENT=dev
PROJECT_NAME=ocr
SEQUENCE=001